{
    "manifest_version": 3,
    "name": "Fuck Twitch ads",
    "description": "When a Twitch ad occurs, mute ad, and unmute the player by player if exists",
    "version": "0.1",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": ["scripts/content-script.js"],
            "matches": [ "*://*.twitch.tv/*" ]
        }
    ]
}